<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



   <EditText
       android:id="@+id/edtName"
       android:hint="Ismingizni kiriting: "
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       android:textSize="19sp"
       android:textColor="@color/black"
       android:textAllCaps="true"
       android:textStyle="bold"

       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edtSurname"
        app:layout_constraintTop_toBottomOf="@id/edtName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:hint="Familiyangizni kiriting: "
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:textSize="19sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

   <Button
       android:id="@+id/btnSave"
       app:layout_constraintTop_toBottomOf="@id/edtSurname"
       android:layout_marginTop="10dp"
       android:text="Databasega qo'shish va saqlash"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>



    <TextView
        android:id="@+id/txtView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:text="Databasedagi ma'lumotlar shu yerda ko'rinadi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:text="Databasedan ma'lumot olish"
        android:id="@+id/btnGetData"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>